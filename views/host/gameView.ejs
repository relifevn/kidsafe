                <div class="progress-bar progress-bar-striped bg-success progress-bar-score" id="countA" role="progressbar" style="width: 1%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                    
                </div><span id="countAnswersA" class="count-text"></span>
                </div>
                <div class="progress answers-bar-bg">
                <div class="progress-bar progress-bar-striped bg-info progress-bar-score" id="countB" role="progressbar" style="width: 1%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                    
                </div><span id="countAnswersB" class="count-text"></span>
                </div>
                <div class="progress answers-bar-bg">
                <div class="progress-bar progress-bar-striped bg-warning progress-bar-score" id="countC" role="progressbar" style="width: 1%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                    
                </div><span id="countAnswersC" class="count-text"></span>
                </div>
                <div class="progress answers-bar-bg">
                <div class="progress-bar progress-bar-striped bg-danger progress-bar-score" id="countD" role="progressbar" style="width: 1%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                    
                </div><span id="countAnswersD" class="count-text"></span>
                </div>
            </div>
            <%# <div>
                <span>A:</span>
                <span id="countAnswersA"></span>
            </div>
            <div>
                <span>B:</span>
                <span id="countAnswersB"></span>
            </div>
            <div>
