        </div>


    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


    <script src="https://www.gstatic.com/firebasejs/5.9.3/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/5.9.3/firebase-auth.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.3/socket.io.js"></script>

    <script>

        // ...........................
        // validate author, not yet
        // ............................

        var socket = io.connect();
        const roomID = "<%= roomID%>";
        var questionNumber = 0;
        var questionsPackId = '<%= questionsPackId%>';

        $( "#next" ).click(requestQuestion);

        function requestQuestion()
        {
            questionNumber++;
            socket.emit('host',{
                state: 1,
                roomID:roomID,
                questionsPackId:questionsPackId,
                questionNumber:questionNumber.toString()
            });
        }

        function requestAnswerAndTopScore()
        {
            socket.emit('host',{
                state: 2,
                roomID:roomID,
                questionsPackId:questionsPackId,
                questionNumber:questionNumber.toString()
            });

        }

        socket.on('host',function(data){ 
            console.log('[INFO] Receive a socket. State',data.state);
            console.log('[INFO] Data: ', data)
            var state =data.state;

            if(roomID == data.roomID){
                if(state==1){
                    $("#playing").show();
                    $("#result").hide();
                    //reset progress bar
                    $("#progressBar").css('width','0%');
                    // $("#numPlayers").html(Object.keys(JSON.parse(data)).length.toString()+' players');
                    $("#A").html(data.a);
                    $("#B").html(data.b);
                    $("#C").html(data.c);
                    $("#D").html(data.d);
                    $("#questionNumber").html("Question " + questionNumber.toString());
                    $("#question").html(data.question);
                    $("#questionImage").attr('src', data.imageURL);
                    limit = parseInt(data.limit);
                    currentTime=0;
                    var p = setInterval(function(){
                        var percentage=currentTime/limit*100;
                        currentTime = currentTime + 1;
                        if(percentage<=100){
                            $("#progressBar").css('width',percentage.toString()+'%');
                        }
                    }, 1000);
                    setTimeout(function(){
                        clearInterval(p);
                        requestAnswerAndTopScore();
                        console.log('[] requestAnswerAndTopScore');
                    }, 1000*(limit+2));
                }else if(state==2 || state == 3){

                    $("#result").show();
                    $("#playing").hide();

                    for(let i=0; i<data.top.length; i++){
                        $("#top"+(i+1).toString()).html(data.top[i][0]);
                        $("#score"+(i+1).toString()).html(data.top[i][1]);
                    }
                    var answer = data.answer;
                    var countA = data.countAnswers.a;
                    var countB = data.countAnswers.b;
                    var countC = data.countAnswers.c;
                    var countD = data.countAnswers.d;

                    var Total = countA + countB + countC + countD + 1;

                    $("#countAnswersA").html(countA);
                    $("#countAnswersB").html(countB);
                    $("#countAnswersC").html(countC);
                    $("#countAnswersD").html(countD);
                    $("#question-answer").html("The answer is " + answer.toUpperCase());

                    $("#countA").css('width',(countA / Total * 100 + 1).toString()+'%');
                    $("#countB").css('width',(countB / Total * 100 + 1).toString()+'%');
                    $("#countC").css('width',(countC / Total * 100 + 1).toString()+'%');
                    $("#countD").css('width',(countD / Total * 100 + 1).toString()+'%');


                    if(state==3){
                        $("#next").html('BACK TO HOME');
                        $( "#next" ).click(function() {
                           window.location.href='/';
                        });
                    }
                }
            } 
            
        });

        // Running first mode
        requestQuestion();
    
    </script>

    </body>
</html>
