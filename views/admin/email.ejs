<div class="row" style="display: none;" id="promotion-page">
    <div class="col-md-6 col-md-offset-3" id="form_container">
        <h2>Promotion Letter</h2>
        
        <form role="form" method="post" id="promoform" action="/admin/send">
            <!--  -->
            <div class="row">
                <div class="col-sm-12 form-group">
                    <label for="message">
                        Subject:</label>
                    <textarea class="form-control" type="textarea" name="subject" id="Subject" maxlength="200" rows="1" placeholder="Example: Update New Version."></textarea>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 form-group">
                    <label for="message">
                        Message:</label>
                    <textarea class="form-control" type="textarea" name="message" id="messagecontent" maxlength="5000" rows="15" ></textarea>
                </div>
            </div>
            <div class="row">
                    <div class="col-sm-12 form-group">
                        <button type="submit" class="btn btn-lg btn-default pull-right" id="sending">Send â†’</button>
                    </div>
            </div>
            
            <div id="success_message" style="width:100%; height:100%; display:none; ">
                    <h3>Send your message successfully!</h3>
            </div>
            <div id="error_message"
                    style="width:100%; height:100%; display:none; ">
                        <h3>Error</h3>
                        Sorry there was an error sending your form.
            </div>
        </form>
        
        
    </div>
</div>

